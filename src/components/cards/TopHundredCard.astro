---
const { img, title, desc } = Astro.props;
---

<div class=" shadow mt-5 mt-md-1 rounded" style="width: 18rem;">
  <img src={img} class="card-img-top" alt="..." />
  <div class="d-flex flex-column justify-content-center align-items-start px-5">
    <div class="pt-2">
      <h5 class="card-title">{title}</h5>
      <p class="card-text text-muted pt-2">{desc}</p>
    </div>
    <div class="d-flex justify-content-start align-items-center gap-3 pt-2">
      <div>
        <img src="/assets/images/png/star_icon.png" alt="" />
      </div>
      <p class="text-muted m-0">(289)</p>
    </div>
    <div class="d-flex gap-3 pt-3">
      <p class="text-danger fw-bolder">$228</p>
      <p class="text-decoration-line-through text-muted">$290</p>
      <p class="p-1 rounded text-danger">-10%</p>
    </div>
  </div>
</div>
